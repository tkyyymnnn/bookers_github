<main>
  <div class='container'>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>
        <%= @user.errors.count %> error prohibited this book from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |error| %>
          <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control user_name", id: "user_name" %>
          </div>
          <div class="form-group">
            <%= f.label :profile_image, "Image" %>
            <%= f.attachment_field :profile_image, class: "form-control-file user_image", id: "user_image" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update User', class: "btn btn-secondary update_user"  %>
          </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</main>